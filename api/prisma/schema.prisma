generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  created_at    DateTime @default(now())

  @@map("users")
}

model Employee {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  department String
  salary     Decimal
  birth_date String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("employees")
}
